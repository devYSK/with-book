@model Pi.Web.Models.PiViewModel

<div class="container">
  <div class="row">
      <div class="col-md-1">
          <img src="~/img/pi-large.png" alt="Pi" width="100%"/>
      </div>
      <div class="col-md-4">
          <h3>To: @Model.DecimalPlaces.ToString("N0") d.p.</h3>
      </div>
      <div class="col-md-3">
          <h3>in: @Model.ComputeMilliseconds.ToString("N0") ms.</h3>
      </div>
      <div class="col-md-4">
          <h3>from: @Model.ComputeHost</h3>
      </div>
  </div>
  <hr/>
  <div class="row">            
    <p class="text-break">@Model.Value</p>        
  </div>
</div>